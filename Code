#include "Header.h"

int main() {
    int n;

    printf("Enter the number of students: ");
    scanf("%d", &n);

    struct Student* students = (struct Student*)malloc(n * sizeof(struct Student));

    inputStudentData(students, n);

    printTopStudent(students, n);

    free(students);

    return 0;
}

void inputStudentData(struct Student* students, int n) {

    for (int i = 0; i < n; i++) {
        printf("Enter the student's name #%d: ", i + 1);
        scanf("%s", students[i].name);
        printf("Enter the student's фпу #%d: ", i + 1);
        scanf("%d", &students[i].age);
        printf("Enter the student's sr_Point #%d: ", i + 1);
        scanf("%f", &students[i].srPoint);
        printf("\n");
    }
}

void printTopStudent(struct Student* students, int n) {

    int topIndex = 0;

    for (int i = 1; i < n; i++) {

        if (students[i].srPoint > students[topIndex].srPoint) {

            topIndex = i;

        }
    }

    printf("The student with the highest grade point average:\n");
    printf("Name: %s\n", students[topIndex].name);
    printf("Age: %d\n", students[topIndex].age);
    printf("Sred point: %.2f\n", students[topIndex].srPoint);
}
